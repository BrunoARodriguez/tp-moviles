<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearPedidoActivity"
    android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Crear un pedido"
    android:textSize="@dimen/titulo"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:text="@string/registro_fecha_pedido"
    android:textSize="@dimen/etiquetas"/>

    <EditText
android:id="@+id/ingresoDiaPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ingrese el dia"
        android:inputType="number"/>

<EditText
    android:id="@+id/ingMesPed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Ingrese el mes"
    android:inputType="number"/>

<EditText
android:id="@+id/ingresoAnioPedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Ingrese el aÃ±o del pedido"
    android:inputType="number"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ingrese la cantidad de unidades"
    android:textSize="@dimen/etiquetas"/>

    <EditText
        android:id="@+id/ingCantPed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <Button
android:id="@+id/btnCrearPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:text="@string/button_crear_pedido"
        android:enabled="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:id="@+id/tvPlatoDelPedido"
        android:textSize="@dimen/etiquetas"/>
    <Button
        android:id="@+id/agregarPlato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar platos al pedido"
        android:enabled="false"/>
    <Button
        android:id="@+id/btnEnviarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buton_enviar_pedido"
        android:enabled="false"/>


</LinearLayout>